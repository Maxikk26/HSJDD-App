<Window x:Class="Directorio.Frontend.EliminarCorreo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Directorio.Frontend"
        mc:Ignorable="d"
        Title="EliminarCorreo" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgcorreo" HorizontalAlignment="Left" Height="171" Margin="26,211,0,0" VerticalAlignment="Top" Width="730"/>
        <TextBox x:Name="txtid" HorizontalAlignment="Left" Height="23" Margin="341,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" PreviewTextInput="NumberValidationTextBox" TextChanged="txtid_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="304,78,0,0" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtnombre" HorizontalAlignment="Left" Height="23" Margin="142,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" TextChanged="txtnombre_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,179,0,0" TextWrapping="Wrap" Text="Buscar por Nombre" VerticalAlignment="Top"/>
        <Button x:Name="btneliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="444,76,0,0" VerticalAlignment="Top" Width="90" Height="23" Click="btneliminar_Click"/>

    </Grid>
</Window>
